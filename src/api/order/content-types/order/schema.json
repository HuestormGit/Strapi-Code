{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "customerName": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "phoneNumber": {
      "type": "string"
    },
    "items": {
      "type": "json"
    },
    "totalAmount": {
      "type": "decimal"
    },
    "orderstatus": {
      "type": "enumeration",
      "enum": ["Pending", "Paid", "Shipped"],
      "default": "Pending"
    },
    "paymentDetails": {
      "type": "json"
    }
  }
}
